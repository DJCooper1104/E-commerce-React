{
  "version": 2,
  "builds": [
    {
      "src": "src/Backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/Backend/**"]
      }
    },
    {
      "src": "src/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "src/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/Backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/build/$1"
    }
  ],
  "env": {
    "DB_HOST": "@db_host",
    "DB_USER": "@db_user",
    "DB_PASSWORD": "@db_password",
    "DB_NAME": "@db_name",
    "DB_PORT": "@db_port"
  }
}
